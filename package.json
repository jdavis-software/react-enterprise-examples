{
  "name": "react-enterprise-examples",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "npm -w apps/demo-app run dev",
    "build": "npm -w packages/ui run build && npm -w apps/demo-app run build",
    "build:vercel": "npm -w packages/ui run build && npm -w apps/demo-app run build",
    "test": "vitest --run",
    "test:ui": "vitest",
    "e2e": "npm -w apps/demo-app run e2e",
    "test:vis": "npm -w packages/ui run vrt",
    "storybook": "npm -w packages/ui run storybook",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "typescript": "npx tsc --noEmit -p apps/demo-app/tsconfig.json",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^20.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^0.6.15",
    "eslint-plugin-testing-library": "^7.6.6",
    "eslint-plugin-unused-imports": "^4.1.4",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vitest": "^2.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,scss,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
